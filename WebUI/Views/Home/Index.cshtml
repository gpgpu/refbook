<!DOCTYPE html>
<html>

<head>
<title>The Complete Reference Book</title>

<link href="@Url.Content("~/Content/css/main.css")" rel="Stylesheet" type="text/css" />
<style type="text/css">
    body
    {
       background-color: #000;
    }
  
</style>
<script src="@Url.Content("~/Scripts/jquery-1.8.1.min.js")" type="text/javascript" ></script>

<script type="text/javascript">
    $(function () {
        $("#tbxPassword").keyup(function (event) {
            if (event.keyCode == 13) {
                $("#btnSubmit").click();
            }
        });

     

        
    });
   

    function ValidateForm() {
        if ($("#tbxUserName").val() == '' || $("#tbxPassword").val() == '') {
            alert("Cannot be empty");
            return false;
        }
        return true;
    }

   
    


</script>

</head>
<body>
<div id="divTitle">
<h1>The Complete Reference Book</h1>

@using (Html.BeginForm("SignIn", "Home", FormMethod.Post, new { onsubmit = "return ValidateForm();" }))
{
<div id="divLogin">

 <table>
 <tr>
    <td class="whiteText">User Name:</td><td><input id="tbxUserName" name="userName" type="text" style="width:100px;" /></td>
 </tr>
 <tr>
    <td class="whiteText">Password: </td><td><input id="tbxPassword" name="password" type="password" style="width:100px;" /></td>
 </tr>
 <tr>
    <td>&nbsp;</td><td><input id="btnSubmit" type="submit" value="Sign In" /></td>
 </tr>
 </table>
</div>
}
</div>

</body>
</html>